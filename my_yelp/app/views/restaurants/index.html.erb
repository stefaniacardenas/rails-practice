<% if @restaurants.any? %>

		<% @restaurants.each do |restaurant| %>
		<div class='restaurant'>
			<h2><%= restaurant.name %></h2>
			<%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
			<%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
			<%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
			<h4> <%= pluralize restaurant.reviews.count, 'review' %></h4>

			<h5>Average rating: <%= number_with_precision(restaurant.average_rating, precision: 1) %> </h5>

			<ul>
				<% restaurant.reviews.each do |review| %>
				<li>
					<strong><%= review.rating %></strong> - <%= review.comments %>
				</li>
				<%end%>
			</ul>
		<%end%>
<%else%>
	No restaurants added yet!

	<%= link_to "Create a restaurant", new_restaurant_path %> 
<%end%>
